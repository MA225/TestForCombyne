<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layoutRoot"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/_20sdp"
	android:orientation="vertical"
	tools:ignore="UnusedAttribute,Autofill">
	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_10sdp"
		android:background="@drawable/bg_edit_normal"
		app:boxStrokeWidth="0dp"
		app:boxStrokeWidthFocused="0dp">
		<EditText
			android:id="@+id/editTitle"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:maxLength="30"
			android:inputType="textCapWords"
			android:imeOptions="flagNoExtractUi|actionNext"
			android:hint="@string/title"
			style="@style/EditNormal" />
	</com.google.android.material.textfield.TextInputLayout>
	<LinearLayout
		android:id="@+id/layoutReleaseDate"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_10sdp"
		android:paddingTop="@dimen/_5sdp"
		android:paddingBottom="@dimen/_5sdp"
		android:paddingStart="@dimen/_15sdp"
		android:paddingEnd="@dimen/_15sdp"
		android:background="@drawable/bg_edit_normal"
		android:foreground="?attr/selectableItemBackground"
		android:orientation="vertical">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/release_date"
			android:textSize="@dimen/_8sdp"
			style="@style/DescriptionFont" />
		<TextView
			android:id="@+id/txtReleaseDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_2sdp"
			android:text="13 August 2021"
			style="@style/ValueFont" />
	</LinearLayout>
	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_10sdp"
		android:background="@drawable/bg_edit_normal"
		app:boxStrokeWidth="0dp"
		app:boxStrokeWidthFocused="0dp">
		<EditText
			android:id="@+id/editSeasons"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:maxLength="10"
			android:inputType="number"
			android:imeOptions="flagNoExtractUi|actionDone"
			android:hint="@string/seasons"
			style="@style/EditNormal" />
	</com.google.android.material.textfield.TextInputLayout>
	<Button
		android:id="@+id/btnSave"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/_20sdp"
		android:enabled="false"
		android:text="@string/save"
		style="@style/ButtonNormal" />
</LinearLayout >