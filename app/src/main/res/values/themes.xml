<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="Theme.TestForCombyne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
		<item name="colorOnPrimary">@color/white_color</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
		<item name="colorOnSecondary">@color/colorOnSecondary</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:colorControlNormal">@color/colorPrimary</item>
	</style>

	<style name="DateTimePickerTheme">
		<item name="android:textColorPrimaryInverse">@color/white_color</item> <!-- header date, month color && calendar text highlight color -->
		<item name="android:textColorSecondaryInverse">@color/white_color</item> <!-- header year color -->
		<item name="android:headerBackground">@color/colorPrimary</item> <!-- header background color -->
		<item name="android:colorAccent">@color/colorPrimary</item> <!-- button color -->
		<item name="colorControlActivated">@color/colorPrimaryVariant</item>   <!--selected date's color -->
		<item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/_10sdp</item>
		<item name="android:backgroundDimAmount">0.5</item>
	</style>

	<style name="ButtonNormal">
		<item name="android:textAllCaps">true</item>
		<item name="android:textSize">@dimen/_12sdp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/button_text_color</item>
		<item name="android:background">@drawable/bg_button_selector</item>
		<item name="android:foreground">?attr/selectableItemBackground</item>
	</style>

	<style name="DescriptionNormal" parent="Widget.AppCompat.EditText">
		<item name="android:background">@color/white_color</item>
		<item name="android:textColorHint">@color/gray_light_color</item>
		<item name="android:textSize">@dimen/_12sdp</item>
		<item name="android:textColor">@color/black_color</item>
	</style>

	<style name="EditNormal" parent="DescriptionNormal">
		<item name="android:singleLine">true</item>
		<item name="android:lines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="DescriptionFont">
		<item name="android:textColor">@color/black_color</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">@dimen/_10sdp</item>
		<item name="android:alpha">0.7</item>
	</style>

	<style name="ValueFont">
		<item name="android:textColor">@color/black_color</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">@dimen/_12sdp</item>
	</style>

</resources>